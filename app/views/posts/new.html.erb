<!DOCTYPE html>
<%= form_tag update_info_path, :method => :post do%>
  <section id="posts" class="section">
    <div class="container login-wrapper">
      <div class="profile-header">
        <h3>Edit Profile</h3>
      </div>
      <% if !@current_user.photo_link || @current_user.photo_link.empty? %>
        <%= image_tag("profile_default.jpg", :alt => "default profile picture", :class => "img-responsive img-pfp") %>
      <% else %>
        <%= image_tag(@current_user.photo_link, :alt => "profile picture", :class => "img-responsive img-pfp") %>
      <% end %>

      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :photo_link, 'Photo Link' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :photo_link %>
        </div>
      </div>
      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :first_name, 'First Name' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :first_name %>
        </div>
      </div>
      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :last_name, 'Last Name' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :last_name %>
        </div>
      </div>

      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :email, 'Email' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :email %>
        </div>
      </div>

      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :profession, 'Occupation' %>
        </div>
        <div class="span3">
          <%= select :current_user,
                     :profession,
                     ["Student", "Professor", "Professional", "Other"] %>
        </div>
      </div>

      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :linkedin, 'LinkedIn' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :linkedin %>
        </div>
      </div>

      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :organization, 'Organization' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :organization %>
        </div>
      </div>


      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :location, 'Current City' %>
        </div>
        <div class="span3">
          <%= text_field :current_user, :location %>
        </div>
      </div>
      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :country_of_origin, 'Country of Origin' %>
        </div>
        <div class="span3">
          <%= country_select :current_user,
                             :country_of_origin,
                             {:include_blank => 'Select Country/Countries',
                             :selected => current_user.country_of_origin_to_array},
                             {:id => "country-select",
                              :multiple => true,
                              "data-toggle"=>"tooltip",
                              :title =>"Hold ctrl and click to choose multiple countries"} %>
        </div>
      </div>
      <div class="row profile-form">
        <div class="span">
          <%= label :current_user, :map_visibility, 'Visible on Map' %>
        </div>
        <div class="span3">
          <%= check_box :current_user,
                            :map_visibility,
                            :value => 1,
                            :checked => current_user.map_visibility %>
        </div>
      </div>

      <%= submit_tag 'Save Changes', :class => "btn btn-primary profile-save"%>
    </div>
  </section>
<% end %>
