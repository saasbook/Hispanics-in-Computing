<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hispanics in Computing</title>
    <%= stylesheet_link_tag "theme-css/bootstrap-responsive" %>
    <%= stylesheet_link_tag "theme-css/style" %>
    <%= stylesheet_link_tag "theme-css/default" %>
    <%= stylesheet_link_tag "flags" %>
    <%= include_gon %>
</head>
<body>
  <!-- navbar -->
  <div class="navbar-wrapper">
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <!-- Responsive navbar -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
        </a>
          <div class="navbar-header">
            <h1 class="brand navbar-title "><a href="/">Hispanics in Computing</a></h1>
            <% if current_user %>
              <h6 class="navbar-name"> <%= "Hello #{current_user.first_name}!" %></h6>
            <% end %>
          </div>
          <!-- navigation -->
          <nav class="pull-right nav-collapse">
            <ul id="menu-main" class="nav">
              <li><a href="/#about">About</a></li>
              <li><a href="/#events">Events</a></li>
              <li><a href="/#connect">Connect</a></li>
              <li>
                <div class="nav-item dropdown nav-outer-menu">
                  <a class="nav-link nav-menu dropdown-toggle" href="#" id="navbarDropdown"
                  role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Tapia<span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu navbar-menu" >
                    <li><%= link_to "TAPIA 2018", conference_2018_path %></li>
                    <li><%= link_to "TAPIA 2017", conference_2017_path %></li>
                    <li><%= link_to "TAPIA 2016", conference_2016_path %></li>
                    <li><%= link_to "TAPIA 2013", conference_2013_path %></li>
                  </ul>
                </div>
              </li>
              <li>
                <% if current_user %>
                  <div class="nav-item dropdown nav-outer-menu">
                    <a class="nav-link nav-menu dropdown-toggle" href="#" id="navbarDropdown"
                    role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Members<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu navbar-menu">
                      <li><%= link_to "View Profile", get_info_path %></li>
                      <li><%= link_to "Edit Profile", add_info_path %></li>
                      <li><%= link_to "View Map", map_path %></li>
                      <li><%= button_to "Log out", logout_path , :id => "logout-button" %></li>
                    </ul>
                  </div>
                <% else %>
                  <%= link_to "Members Login", members_path %>
                <% end %>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <%= bootstrap_flash(:class => "flash-notice") %>
  <%= yield %>
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "jquery.nav" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= javascript_include_tag "custom" %>

  <footer id="connect">
    <div class="container">
      <h4>Connect with us</h4>
      <div class="row">
        <div class="span6 offset3">
          <ul class="social-networks">
            <li><a href="https://www.linkedin.com/groups/6962622" target="_blank">
              <i class="icon-circled icon-bgdark icon-linkedin icon-2x"></i></a></li>
            <li><a href="https://www.facebook.com/groups/HispanicsInComputing/" target="_blank">
              <i class="icon-circled icon-bgdark icon-facebook icon-2x"></i></a></li>
            <li><a href="https://twitter.com/HispanicsInComp" target="_blank">
              <i class="icon-circled icon-bgdark icon-twitter icon-2x"></i></a></li>
            <li><a href="http://hispanicsincomputing.org/mailman/listinfo/members_hispanicsincomputing.org"
               target="_blank">
              <i class="icon-circled icon-bgdark icon-envelope icon-2x"></i></a></li>
          </ul>
          <p class="copyright">
            &copy; Hispanics in Computing 2014-today
          </p>
        </div>
      </div>
    </div>
    <!-- ./container -->
  </footer>
</body>
</html>
